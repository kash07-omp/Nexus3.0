<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nexus</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/d93a7007a0.js" crossorigin="anonymous"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="topbar">
        <div class="topbar-left">
            <a class="logo" asp-controller="Home" asp-action="Index">Nexus</a>
        </div>
        <div class="topbar-right">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="icon-container">
                    <a class="icon-link" href="#"><i class="fas fa-bell"></i></a>
                    <a class="icon-link" href="#"><i class="fas fa-envelope"></i></a>
                </div>
                <div class="user-avatar">
                    <img class="avatar-img" src="/images/avatar.png" alt="User Avatar" />
                    <div class="user-menu-dropdown">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit">Logout</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="user-menu">
                    <a asp-controller="Account" asp-action="Login">Login</a>
                    <a asp-controller="Account" asp-action="Register">Register</a>
                </div>
            }
        </div>
    </div>

    <div class="layout">
        <aside class="sidebar">
            <nav class="sidebar-nav">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Region" asp-action="Index">Regions</a></li>
                    <li><a asp-controller="Planets" asp-action="Index">Planets</a></li>
                    <li><a asp-controller="Deck" asp-action="Index">Deck</a></li>
                </ul>
                <div class="sidebar-footer">
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </nav>
        </aside>

        <main class="content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>