@model List<Nexus.Domain.Entities.Card>
<div class="container">
    <h2>My Deck</h2>

    <!-- Botones de compra de cofres -->
    <div class="row mb-4">
        <div class="col text-center">
            <button class="btn btn-primary" onclick="buyChest('Normal')">Buy Normal Chest (100 Credits)</button>
            <button class="btn btn-warning" onclick="buyChest('Gold')">Buy Gold Chest (300 Credits)</button>
            <button class="btn btn-success" onclick="buyChest('Platinum')">Buy Platinum Chest (500 Credits)</button>
        </div>
    </div>

    <!-- Listado de cartas en grid -->
    <div class="row">
        @foreach (var card in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
                <div class="card text-center">
                    <img src="/images/@card.ImageUrl" class="card-img-top" alt="@card.Name" style="max-height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@card.Name</h5>
                        <p class="card-text">@card.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para mostrar la carta obtenida -->
<div id="newCardModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Card Obtained!</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="newCardImage" src="" class="img-fluid mb-3" alt="Card Image" style="max-height: 300px;" />
                <h5 id="newCardName"></h5>
                <p id="newCardDescription"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function buyChest(chestType) {
        $.post('/Deck/BuyChest', { chestType }, function (response) {
            if (response.success) {

                // Actualizar la imagen, el nombre y la descripción de la carta en el modal
                $('#newCardImage').attr('src', '/images/' + response.card.imageUrl);
                $('#newCardName').text(response.card.name);
                $('#newCardDescription').text(response.card.description);

                // Mostrar el modal
                $('#newCardModal').modal('show');

                // Actualizar el grid de cartas
                setTimeout(function () {
                    location.reload();  // Esperar antes de recargar para que el modal se muestre correctamente
                }, 5000);  // Ajuste el tiempo si es necesario
            } else {
                alert(response.message);
                console.log("Error: " + response.message);  // Log para verificar el error
            }
        }).fail(function (error) {
            console.log("Error during request: ", error);  // Manejo de errores
        });
    }
</script>

